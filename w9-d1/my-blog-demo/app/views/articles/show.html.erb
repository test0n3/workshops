<h1><%= @article.title %></h1>
<% if @article.cover.attached? %>
	<%# <img src="<%= url_for(@article.cover)" width="500" /> %>
	<%= image_tag @article.cover.variant(resize: "300x300") %>
<% end %>
<p><%= @article.body %></p>
<%= link_to "Delete",
            article_path(@article.id),
            method: :delete,
            data: {
              confirm: "Really delete the article?"
            } %>
<%= link_to "Articles List",
            articles_path %>

<%= link_to "Edit",
            edit_article_path(@article) %>
